{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "NodeNext"
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"resolveJsonModule": true,
	"allowSyntheticDefaultImports": true
}
